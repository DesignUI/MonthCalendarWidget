<?xml version="1.0" encoding="utf-8"?>
<resources>
   <style name="SettingsTheme">
      <item name="android:windowIsTranslucent">true</item>
      <item name="android:windowBackground">@color/settings_background</item>
      <item name="android:windowContentOverlay">@null</item>
   </style>    
	<style name="InstructionsTheme" parent="@android:style/Theme.NoTitleBar">
	   <item name="android:windowIsTranslucent">true</item>
      <item name="android:windowBackground">@color/instructions_background</item>
      <item name="android:windowContentOverlay">@null</item>
	</style>    
   <!-- 3x2 -->
	<style name="Img_Arrows">
	 	<item name="android:background">@null</item>
	 	<item name="android:layout_width">wrap_content</item>
	 	<item name="android:layout_height">wrap_content</item>
	</style>
   <style name="Text_MonthYear">
      <item name="android:textSize">14sp</item>
      <item name="android:textColor">@color/white</item>
      <item name="android:paddingTop">4dip</item>
	   <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item> 
	   <item name="android:layout_weight">1.0</item>
	   <item name="android:gravity">center</item>
   </style>
   <style name="LL_DatesColumn">
   	<item name="android:layout_width">25dip</item>
   	<item name="android:layout_height">wrap_content</item>
   </style>
   <style name="LL_DatesColumn_WC">
   	<item name="android:layout_width">wrap_content</item>
   	<item name="android:layout_height">wrap_content</item>
   </style>
   <style name="Text_DaysOfWeek">
      <item name="android:textSize">10sp</item>
      <item name="android:textColor">@color/lightgray</item>
	   <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">fill_parent</item> 
	   <item name="android:gravity">center</item>
   </style>
   <style name="Text_DatesColumn">
      <item name="android:textSize">12sp</item>
      <item name="android:textColor">@color/white</item>
      <item name="android:paddingTop">4dip</item>
	   <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">fill_parent</item> 
	   <item name="android:gravity">right</item>
   </style>
   <!-- 4x3 -->
	<style name="Img_Arrows_4x3">
	 	<item name="android:background">@null</item>
	 	<item name="android:layout_width">wrap_content</item>
	 	<item name="android:layout_height">wrap_content</item>
	 	<item name="android:paddingTop">9dip</item>
	</style>
   <style name="Text_MonthYear_4x3">
      <item name="android:textSize">22sp</item>
      <item name="android:textColor">@color/white</item>
      <item name="android:paddingTop">8dip</item>
      <item name="android:paddingBottom">10dip</item>
	   <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item> 
	   <item name="android:layout_weight">1.0</item>
	   <item name="android:gravity">center</item>
   </style>
   <style name="LL_DatesColumn_4x3">
   	<item name="android:layout_width">38dip</item>
   	<item name="android:layout_height">wrap_content</item>
   </style>
   <style name="LL_DatesColumn_4x3_WC">
   	<item name="android:layout_width">wrap_content</item>
   	<item name="android:layout_height">wrap_content</item>
   </style>
   <style name="Text_DaysOfWeek_4x3">
      <item name="android:textSize">14sp</item>
      <item name="android:textColor">@color/lightgray</item>
	   <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">fill_parent</item> 
	   <item name="android:gravity">center</item>
   </style>
   <style name="Text_DatesColumn_4x3">
      <item name="android:textSize">18sp</item>
      <item name="android:textColor">@color/white</item>
      <item name="android:paddingTop">9dip</item>
	   <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">fill_parent</item> 
	   <item name="android:gravity">right</item>
   </style>
</resources>
