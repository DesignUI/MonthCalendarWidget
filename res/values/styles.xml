<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
   <style name="SettingsTheme">
      <item name="android:windowIsTranslucent">true</item>
      <item name="android:windowBackground">@color/settings_background</item>
      <item name="android:windowContentOverlay">@null</item>
   </style>    
	<style name="InstructionsTheme" parent="@android:style/Theme.NoTitleBar">
	   <item name="android:windowIsTranslucent">true</item>
      <item name="android:windowBackground">@color/instructions_background</item>
      <item name="android:windowContentOverlay">@null</item>
	</style>    
   <!-- 3x2 -->
	<style name="Img_Arrow">
	 	<item name="android:background">@null</item>
	 	<item name="android:layout_width">wrap_content</item>
	 	<item name="android:layout_height">match_parent</item>
	</style>
   <style name="Text_MonthYear">
      <item name="android:textSize">@dimen/month_year_3x2</item>
      <item name="android:textColor">@color/white</item>
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">match_parent</item> 
      <item name="android:gravity">center</item>
   </style>
   <style name="Text_DaysOfWeek">
      <item name="android:textSize">@dimen/days_week_3x2</item>
      <item name="android:textColor">@color/lightgray</item>
	   <item name="android:layout_width">0dp</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_weight">1</item>
	   <item name="android:gravity">center</item>
   </style>
   <style name="LL_Week">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">0dp</item>
      <item name="android:layout_weight">8</item>
   </style>
   <style name="Text_Dates">
      <item name="android:textSize">@dimen/dates_3x2</item>
      <item name="android:textColor">@color/white</item>
      <item name="android:layout_marginTop">4dp</item>
      <item name="android:layout_marginLeft">2dp</item>
      <item name="android:paddingRight">5dp</item>
      <item name="android:layout_width">0dp</item>
      <item name="android:layout_height">match_parent</item> 
      <item name="android:layout_weight">1</item> 
      <item name="android:gravity">right</item>
   </style>
   <!-- 4x3 -->
	<style name="Img_Arrow_4x3">
	 	<item name="android:background">@null</item>
	 	<item name="android:layout_width">wrap_content</item>
	 	<item name="android:layout_height">match_parent</item>
	 	<item name="android:paddingTop">5dp</item>
	</style>
   <style name="Text_MonthYear_4x3">
      <item name="android:textSize">@dimen/month_year_4x3</item>
      <item name="android:textColor">@color/white</item>
	   <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">match_parent</item> 
	   <item name="android:gravity">center</item>
   </style>
   <style name="Text_DaysOfWeek_4x3">
      <item name="android:textSize">@dimen/days_week_4x3</item>
      <item name="android:textColor">@color/lightgray</item>
	   <item name="android:layout_width">0dp</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_weight">1</item>
	   <item name="android:gravity">center</item>
   </style>
   <style name="Text_Dates_4x3">
      <item name="android:textSize">@dimen/dates_4x3</item>
      <item name="android:textColor">@color/white</item>
      <item name="android:layout_marginTop">6dp</item>
      <item name="android:layout_marginLeft">4dp</item>
      <item name="android:paddingRight">7dp</item>
      <item name="android:layout_width">0dp</item>
      <item name="android:layout_height">match_parent</item> 
      <item name="android:layout_weight">1</item> 
      <item name="android:gravity">right</item>
   </style>
</resources>
